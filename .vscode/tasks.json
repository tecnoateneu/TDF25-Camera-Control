{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create venv",
            "type": "shell",
            "command": "python3.11 -m venv --system-site-packages env311",
            "presentation": {
                "reveal": "always"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Install libcap development headers",
            "type": "shell",
            "command": "sudo apt-get install libcap-dev",
            "presentation": {
                "reveal": "always"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Activate venv",
            "type": "shell",
            "command": "source env311/bin/activate && pip install --upgrade pip && pip install -r .vscode/requirements.txt",
            "dependsOn": "Create venv",
            "presentation": {
                "reveal": "always"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Desactivar HDR c√†mera",
            "type": "shell",
            "command": "v4l2-ctl --set-ctrl wide_dynamic_range=0 -d /dev/v4l-subdev0",
            "dependsOn": "Create venv",
            "presentation": {
                "reveal": "always"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
